<div class="modal" id="edite_<%= bneresultat[i].bne_id %>">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/bnenter/add" method="POST">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4>Ajout de client</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">

                    <!--<table border="">-->
                    <div class="container-fluid">

                        <input type="hidden" class="form-control" name="id" placeholder="Entrer votre id" id="idbne" value="<%= bneresultat[i].bne_id %>">
                        <div class="input-group mb-2">
                            <span class="input-group-text">Numero bon  : </span>
                            <input type="text" name="numerobne" class="form-control" id="numerobne" placeholder="@numero" value="<%= bneresultat[i].num_bne %>">
                        </div>
                        <div class="input-group mb-2">
                            <% const datevalue_in = bneresultat[i].date_bne.toISOString().slice(0,10) %>
                            <span class="input-group-text">Date : </span>
                            <input type="date" name="datebne" class="form-control" id="datebne" placeholder="@date" value="<%=datevalue_in%>">
                        </div>
                    </div>

                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success" value="modify"><i
                        class="fa fa-edit bi me-2"></i>Modifier</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Annuler</button>
                </div>
            </form>
        </div>
    </div>
</div>



